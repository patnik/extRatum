Package: BEI
Title: Built Environment Indicators
Version: 0.0.0.9000
Authors@R: c(
	person("Nikos", "Patias", email = "n.patias@liverpool.ac.uk", role = c("aut","cre"), comment = c(ORCID = "0000-0002-6542-2330")),
